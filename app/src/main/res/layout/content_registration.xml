<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.attendanceapp.org.RegistrationActivity"
    tools:showIn="@layout/activity_registration">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtCompnayNameWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:theme="@style/EdittextLogin"
                    app:layout_constraintRight_toRightOf="parent">

                    <EditText
                        android:id="@+id/edtCompnayName"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Company Name"
                        android:inputType="textCapSentences"
                        android:textColor="@color/white"
                        tools:visibility="visible" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtMobileWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:theme="@style/EdittextLogin"
                    app:layout_constraintRight_toRightOf="parent">

                    <EditText
                        android:id="@+id/edtMobile"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile no"
                        android:maxLength="10"
                        android:inputType="numberSigned"
                        android:textColor="@color/white"
                        tools:visibility="visible" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtContactPersonNameWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:theme="@style/EdittextLogin"
                    app:layout_constraintRight_toRightOf="parent">

                    <EditText
                        android:id="@+id/edtContactPersonName"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contact Person Name"
                        android:inputType="textCapSentences"
                        android:textColor="@color/white"
                        tools:visibility="visible" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtEmailWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:theme="@style/EdittextLogin"
                    app:layout_constraintRight_toRightOf="parent">

                    <EditText
                        android:id="@+id/edtEmail"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email "
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        tools:visibility="visible" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtWebsiteWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:theme="@style/EdittextLogin"
                    app:layout_constraintRight_toRightOf="parent">

                    <EditText
                        android:id="@+id/edtWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Wesbite "
                        android:inputType="textCapSentences"
                        android:text="www."
                        android:textColor="@color/white"
                        tools:visibility="visible" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtAddressWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:theme="@style/EdittextLogin"
                    app:layout_constraintRight_toRightOf="parent">

                    <EditText
                        android:id="@+id/edtAddress"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top|left"
                        android:hint="Address "
                        android:inputType="textCapSentences|textMultiLine"

                        android:minLines="3"

                        android:textColor="@color/white"
                        tools:visibility="visible" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtRemarkWrapper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:theme="@style/EdittextLogin"
                    app:layout_constraintRight_toRightOf="parent">

                    <EditText
                        android:id="@+id/edtRemark"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top|left"
                        android:hint="Remark"
                        android:inputType="textCapSentences|textMultiLine"

                        android:minLines="3"

                        android:textColor="@color/white"
                        tools:visibility="visible" />
                </android.support.design.widget.TextInputLayout>


                <Button
                    android:id="@+id/btnSaveData"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="11dp"
                    android:background="@color/white"
                    android:text="Send Request"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>

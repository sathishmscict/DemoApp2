<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme.Card.Margins"
    android:layout_width="fill_parent"

    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tvEmployeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:text="Sathish Gadde"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryText"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivUser"
            android:layout_toEndOf="@+id/ivUser" />

        <TextView
            android:id="@+id/tvInTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryText"

android:drawableLeft="@drawable/icon_down_arrow"
            android:drawableTint="@color/green"
            android:text="10:10 AM"
            android:layout_below="@+id/tvEmployeeName"
            android:layout_alignLeft="@+id/tvEmployeeName"
            android:layout_alignStart="@+id/tvEmployeeName" />

        <TextView
            android:id="@+id/tvOutTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center"

            android:drawableLeft="@drawable/icon_arrow_up"
            android:layout_marginStart="13dp"
            android:text="08:00 PM"
            android:layout_alignBaseline="@+id/tvInTime"
            android:layout_alignBottom="@+id/tvInTime"
            android:layout_toRightOf="@+id/tvInTime"
            android:layout_toEndOf="@+id/tvInTime" />

        <TextView
            android:id="@+id/tvThumbCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvOutTime"
            android:layout_alignBottom="@+id/tvOutTime"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/tvOutTime"
            android:layout_toRightOf="@+id/tvOutTime"
            android:drawableLeft="@drawable/icon_fingerprint"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_alignLeft="@+id/tvInTime"
            android:layout_alignStart="@+id/tvInTime"
            android:layout_below="@+id/tvInTime" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
